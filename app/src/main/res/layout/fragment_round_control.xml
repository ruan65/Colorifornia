<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/fragment_round_color_layout"
    tools:context="com.engstuff.coloriphornia.fragments.SeekBarsColorControlFragment">

    <com.engstuff.coloriphornia.components.views.RoundColorMaker
        android:id="@+id/view_round_color_maker"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/reset_alpha"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_favorite_white_36dp"
        android:layout_height="wrap_content" />

</RelativeLayout>