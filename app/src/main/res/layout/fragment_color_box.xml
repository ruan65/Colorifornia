<android.gesture.GestureOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gestures_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/color_box_layout"
        android:clickable="true"
        tools:context="com.engstuff.coloriphornia.fragments.FragmentColorBox">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_info_white"
            android:padding="10dp"
            android:id="@+id/btn_color_info"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_loyalty_white_24dp"
            android:id="@+id/like"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_color_info"
            android:layout_toStartOf="@+id/btn_color_info" />

    </RelativeLayout>
</android.gesture.GestureOverlayView>


