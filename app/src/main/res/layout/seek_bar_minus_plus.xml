<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.engstuff.coloriphornia.components.views.SeekBarButton
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/minus_red" />

    <SeekBar
        android:id="@+id/sbRed"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:thumb="@drawable/thumb_r"
        android:progress="@integer/sbProgressR"
        android:progressDrawable="@drawable/progress_red" />

    <com.engstuff.coloriphornia.components.views.SeekBarButton
        android:id="@+id/plus_red"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />




</merge>