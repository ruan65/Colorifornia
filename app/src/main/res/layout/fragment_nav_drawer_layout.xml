<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.engstuff.coloriphornia.fragments.FragmentNavDrawer">

    <RelativeLayout style="@style/nav_btn_row">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_img"
            style="@style/nav_btn"
            android:layout_above="@+id/btn_favorite"
            android:src="@drawable/ic_perm_media_white_24dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_favorite"
            style="@style/nav_btn"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_favorite_white_36dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_settings"
            style="@style/nav_btn"
            android:layout_below="@+id/btn_favorite"
            android:src="@drawable/ic_settings_white_36dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

    </RelativeLayout>

    <RelativeLayout style="@style/nav_btn_row">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_one_color"
            style="@style/nav_btn"
            android:layout_above="@+id/btn_two_colors"
            android:src="@drawable/ic_tune_white_48dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_two_colors"
            style="@style/nav_btn"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_looks_two_white_48dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_round_control_c"
            style="@style/nav_btn"
            android:layout_below="@+id/btn_two_colors"
            android:src="@drawable/ic_track_changes_white_36dp"
            app:cb_color="@color/primaryColor"
            app:cb_pressedRingWidth="8dip" />

    </RelativeLayout>



</LinearLayout>
