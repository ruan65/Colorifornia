<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/primaryColorDark</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="seek_bar_frame_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">10</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="seek_bar_style">
        <item name="android:max">@integer/sbMax</item>
        <item name="android:maxHeight">1000dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:thumbOffset">@dimen/thumb_offset</item>
    </style>

    <style name="seek_bar_btn_style_abstract" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seek_bar_btn_style_L" parent="seek_bar_btn_style_abstract">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/ic_arrow_simple_thin_left</item>
    </style>

    <style name="seek_bar_btn_style_R" parent="seek_bar_btn_style_abstract">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:src">@drawable/ic_arrow_simple_thin_right</item>
    </style>

</resources>
